{
  "type": "kafka",
  "spec": {
    "dataSchema": {
      "dataSource": "ecommerce-topic-1",
      "timestampSpec": {
        "column": "timestamp",
        "format": "iso"
      },
      "dimensionsSpec": {
        "dimensions": [
          "transaction_id",
          "customer_id",
          "product_name",
          "category",
          "payment_method",
          "status",
          "order_type",
          "city",
          "country",
          "device",
          "brand",
          "display_type",
          "resolution",
          "source",
          "currency"
        ]
      },
      "metricsSpec": [
        {
          "type": "count",
          "name": "count"
        },
        {
          "type": "doubleSum",
          "name": "total_amount",
          "fieldName": "total_amount"
        },
        {
          "type": "longSum",
          "name": "total_quantity",
          "fieldName": "quantity"
        },
        {
          "type": "doubleMin",
          "name": "min_price",
          "fieldName": "price"
        },
        {
          "type": "doubleMax",
          "name": "max_price",
          "fieldName": "price"
        },
        {
          "type": "longSum",
          "name": "screen_size_sum",
          "fieldName": "screen_size"
        },
        {
          "type": "doubleSum",
          "name": "latitude",
          "fieldName": "latitude"
        },
        {
          "type": "doubleSum",
          "name": "longitude",
          "fieldName": "longitude"
        }
      ],
      "granularitySpec": {
        "type": "uniform",
        "segmentGranularity": "HOUR",
        "queryGranularity": "MINUTE",
        "rollup": false
      }
    },
    "ioConfig": {
      "topic": "ecommerce-topic-1",
      "inputFormat": {
        "type": "json"
      },
      "consumerProperties": {
        "bootstrap.servers": "YOUR_BOOTSTRAP_SERVER",
        "security.protocol": "SASL_SSL",
        "sasl.mechanism": "PLAIN",
        "sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username='YOUR_API_KEY' password='YOUR_API_SECRET';"
      },
      "taskCount": 1,
      "replicas": 1,
      "taskDuration": "PT1H",
      "useEarliestOffset": true
    },
    "tuningConfig": {
      "type": "kafka",
      "maxRowsPerSegment": 5000000
    }
  }
}